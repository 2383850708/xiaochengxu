.navbar{
  width: 100%;
  white-space:nowrap;
  background:#fff;
  margin-bottom:1rpx;
  position:fixed;
  top:0rpx;
  z-index: 100;
  border-top:1rpx solid #ECECEC;
  border-bottom:1rpx solid #ECECEC;
}
.tab{
	display: flex;
	flex-direction: column;
}
.tab-nav{
	height: 80rpx;
	background: #fff;
	border-bottom: 0.5rpx dotted #ddd;
	display: flex;
	line-height: 79rpx;
	position: relative;
}
 
.tab-line{
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #E03626;
	transition: all 0.3s;
}
.tab-content{
	flex: 1;
	overflow-y: auto;
	overflow-x: hidden;
}

.tab-nav .item{
  min-width:20%;
  color:#656565;
  max-width:20%;
  text-align:center;
  height: 80rpx;
  font-size:26rpx;
}

.tab-nav .item.active{ 
 color:#D44B44; 
} 

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
