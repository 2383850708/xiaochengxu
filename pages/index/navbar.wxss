.tab{
	display: flex;
	flex-direction: column;
}
.tab-nav{
	height: 80rpx;
	background: #fff;
	border-bottom: 0.5rpx dotted #ddd;
	display: flex;
	line-height: 79rpx;
	position: relative;
}
 
.tab-line{
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #E03626;
	transition: all 0.3s;
}
.tab-content{
	flex: 1;
	overflow-y: auto;
	overflow-x: hidden;
}

.tab-nav .item{
  min-width:20%;
  color:#656565;
  max-width:20%;
  text-align:center;
  height: 80rpx;
  font-size:26rpx;
}

.tab-nav .item.active{ 
 color:#D44B44; 
} 
